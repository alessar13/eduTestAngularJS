{
    "compilerOptions": {
        "target": "es2015",
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "suppressImplicitAnyIndexErrors": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "declarationDir": "./dist/types",
        "noEmitOnError": true
    },

    "include": [
        "app/**/*"
    ],

    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}